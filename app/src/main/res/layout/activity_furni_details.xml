<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_furni_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ckfyp.furniqr.FurniDetailsActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:id="@+id/furniimage"
        android:src="@drawable/hottestitem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/furniimage"
        android:id="@+id/furniname"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Comfy Sofa"
        android:textSize="30dp"
        android:gravity=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/furniimage"
        android:layout_below="@id/furniname"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Blue sofa with comfy pillow, with two sides on it"
        android:textSize="20dp"
        android:gravity=""
        android:id="@+id/furnidescription" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textilebox"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/colorbox"
        android:layout_alignParentStart="true"></Spinner>

    <TextView
        android:text="Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/furnicost"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:textAppearance="@android:style/TextAppearance" />

    <TextView
        android:text="Textile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/colorbox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textAppearance="@android:style/TextAppearance" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/colorbox"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"></Spinner>

    <Button
        android:text="Add to Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:id="@+id/addtocart"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="RM 125.90"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/furnicost"
        android:layout_below="@+id/furniimage"
        android:layout_alignParentStart="true" />


</RelativeLayout>
