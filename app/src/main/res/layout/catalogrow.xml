<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:id="@+id/furniimage"
        android:src="@drawable/hottestitem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comfy Sofa"
        android:textStyle="bold"
        android:id="@+id/furniname"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textSize="25dp"
        android:gravity=""
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/furniimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 25.90"
        android:id="@+id/furnicost"
        android:paddingLeft="10dp"
        android:textSize="40dp"
        android:gravity=""
        android:layout_below="@+id/furnidescription"
        android:layout_toEndOf="@+id/furniimage"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue with super comfy pillow"
        android:id="@+id/furnidescription"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:textSize="14dp"
        android:gravity=""
        android:layout_below="@+id/furniname"
        android:layout_toEndOf="@+id/furniimage" />


</RelativeLayout>